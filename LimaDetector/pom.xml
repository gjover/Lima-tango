<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
       <groupId>fr.soleil</groupId>
       <artifactId>super-pom-C-CPP-device</artifactId>
       <version>RELEASE</version>
   </parent>

   <groupId>fr.soleil.device</groupId>
   <artifactId>LimaDetector-${aol}-${mode}</artifactId>
   <version>1.1.6</version>
   <packaging>nar</packaging>
   <name>LimaDetector</name>
   <description>LimaDetector device</description>

    <dependencies>
	  <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>YAT4Tango-${aol}-${library}-${mode}</artifactId>   
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>YAT-${aol}-${library}-${mode}</artifactId>
      </dependency>  
            
      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>Utils-${aol}-${library}-${mode}</artifactId>
      </dependency>
            
      <dependency>
         <groupId>fr.soleil.lib.Lima</groupId>
         <artifactId>LimaControl-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>         
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaBasler-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaAdsc-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>
   
      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaMarccd-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaPilatus-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaProsilica-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>
      
      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaSimulator-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>
     
      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaXpad-${aol}-shared-${mode}</artifactId>
         <version>1.1.6</version>
      </dependency>
      
    </dependencies>
	
	<scm>
       <connection>scm:git:git://git.epn-campus.eu/repositories/Lima</connection>
       <developerConnection>scm:git:git://git@git.epn-campus.eu/repositories/Lima</developerConnection>
       <url>https://forge.epn-campus.eu/projects/show/lima</url>
   </scm>
	
   <build>
       <plugins>
            <plugin>
                 <groupId>org.freehep</groupId>
                 <artifactId>freehep-nar-plugin</artifactId>
                 <configuration>
                     <cpp>
                        <defines>
                           <define>BOOST_ALL_DYN_LINK</define>
                           <define>LOG4TANGO_HAVE_INT64_T</define>
                           <define>USE_GIGE</define>
						   
						   <!-- define wich detector you need to ENABLE -->                           
                           <define>BASLER_ENABLED</define>
                           <define>ADSC_ENABLED</define>    
                           <define>MARCCD_ENABLED</define>
                           <define>PILATUS_ENABLED</define>
                           <define>PROSILICA_ENABLED</define>
                           <define>SIMULATOR_ENABLED</define>
                       	   <define>XPAD_ENABLED</define>

                        </defines>

                        <systemIncludePaths>
                        	<systemIncludePath>${env.PYLON_ROOT}</systemIncludePath>
                            <systemIncludePath>${env.PYLON_ROOT}/include</systemIncludePath>
                            <systemIncludePath>${env.PYLON_ROOT}/genicam/library/CPP/include</systemIncludePath>
                            
							<systemIncludePath>../../../camera/prosilica/sdk/include</systemIncludePath>           

							<systemIncludePath>../../../camera/adsc/src_std/incl</systemIncludePath>
							<systemIncludePath>../../../camera/adsc/src_std/detcon_lib_th</systemIncludePath>
							<systemIncludePath>../../../camera/adsc/src_std/auxlib</systemIncludePath>
							                            
                        </systemIncludePaths>

                        <!-- exclude every detector who is NOT ENABLED -->
                        <excludes>
<!--
                            <exclude>Basler*.*</exclude>                                                         
                            <exclude>MarCCD*.*</exclude>                          
                            <exclude>Pilatus*.*</exclude>
                            <exclude>Adsc*.*</exclude>                            
                            <exclude>Prosilica*.*</exclude>                     
	                       	<exclude>Simulator*.*</exclude>                 	
                            <exclude>Xpad*.*</exclude>
-->                           
                        </excludes>

                        <!-- define less verbose mode for gcc-->
                        <options>
                            <option>-w</option>
                        </options>
                     </cpp>   
                    <linker>
                        <libs>
                            <lib>
                                <name>pylonbase</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/lib</directory>
                            </lib>

							<lib>
                                <name>GenApi_gcc40_v2_1</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/genicam/bin/Linux32_i86</directory>
                            </lib>
                          
                            <lib>
                                <name>GCBase_gcc40_v2_1</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/genicam/bin/Linux32_i86</directory>
                            </lib>

                            <lib>
                                <name>MathParser_gcc40_v2_1</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/genicam/bin/Linux32_i86</directory>
                            </lib>
                            
                            <lib>
                                <name>log4cpp_gcc40_v2_1</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/genicam/bin/Linux32_i86</directory>
                            </lib>
                            
                            <lib>
                                <name>pylongigesupp</name>
                                <type>shared</type>
                                <directory>${env.PYLON_ROOT}/lib</directory>
                            </lib>
                            
                            <lib>
                                <name>PvAPI</name>
                                <type>shared</type>
                                <directory>../../../camera/prosilica/sdk/bin/x86</directory>
                            </lib>

                            <lib>
                                <name>auxlib</name>
                                <type>shared</type>
                                <directory>../../../camera/adsc/sdk/adsc_sources/lib/linux</directory>
                            </lib>
                                                        
                        </libs>

                    </linker>                  
                 </configuration>
            </plugin>

       </plugins>
   </build>

   <developers>
       <developer>
           <id>noureddine</id>
           <name>noureddine</name>
           <url>http://controle/</url>
           <organization>Synchrotron Soleil</organization>
           <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
           <roles>
               <role>manager</role>
           </roles>
           <timezone>1</timezone>
       </developer>
   </developers>
</project>
